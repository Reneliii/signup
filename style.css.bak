
body{
	background-color: rgba(153,153,255,100);
	background-attachment: fixed;
	font-family: 'Courier New';
	font-variant: small-caps;
	text-transform: lowercase;
	color: #fff;
}

.tab{
	background-color: rgba(0,0,0,0.7);
	font-size: 18px;
	padding-top: 34px;
	text-align: center;
	display: absolute;
	width: 100%;
	align-items: center;
	border-radius: 100px;
	margin: auto;
	margin-top: 10px;
	padding-bottom: 60px;
	position: relative;
}
